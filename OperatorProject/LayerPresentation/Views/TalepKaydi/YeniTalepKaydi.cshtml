@model TalepKaydiViewModel
<h1>Yeni Talep Kaydı</h1>

<form method="post" asp-controller="TalepKaydi" asp-action="YeniTalepKaydi">
    <input type="hidden" name="musteriId" value="@ViewBag.MusteriId" />
    <div class="form-group">
        <label for="konu">Konu</label>
        <input type="text" id="konu" name="konu" class="form-control" />
    </div>
    <div class="form-group">
        <label for="aciklama">Açıklama</label>
        <textarea id="aciklama" name="aciklama" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="kullaniciId">Kullanıcı</label>
        <select id="kullaniciId" name="kullaniciId" class="form-control">
            @foreach (var kullanici in Model.kullanicilar)
            {
                <option value="@kullanici.Id">@kullanici.KullaniciAdi</option>
            }
        </select>
    </div>
   

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
